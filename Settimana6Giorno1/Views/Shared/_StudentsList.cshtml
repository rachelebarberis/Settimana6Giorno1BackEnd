@model StudentListViewModel

@if (Model.Students != null && Model.Students.Count() > 0)
{
    <table id="studentTable" class="table table-striped">
        <thead>
        <th>Nome</th>
        <th>Congome</th>
        <th>Email</th>
        <th>Action</th>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.Nome</td>
                    <td>@student.Cognome</td>
                    <td>@student.Email</td>
              
                    <td>
                        <button class="btn btn-sm btn-success" onclick="showEditModal('@student.Id')">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="showDeleteModal('@student.Id')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">No products found!</p>
}